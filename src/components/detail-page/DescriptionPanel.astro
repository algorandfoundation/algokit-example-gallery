---
import type { Example } from "../../types/example";
import Feature from "./Feature.astro";
interface DescriptionPanelProps {
  description: Example["description"];
  features: Example["features"];
  title: Example["title"];
  type: Example["type"];
}

const { description, features, title, type } =
  Astro.props as DescriptionPanelProps;
Astro.props as DescriptionPanelProps;
---

<div class="flex flex-col-reverse gap-6 md:flex-row">
  <div class="basis-2/4 flex flex-col gap-5">
    <p class="text">{description}</p>
    {
      features && (
        <div class="flex flex-col gap-2">
          <h2 class="text-lg font-bold">Features</h2>
          {features.map((feature) => (
            <Feature feature={feature} />
          ))}
        </div>
      )
    }
  </div>
  <div class="basis-3/4">
    <img
      src={`/images/algokit-gallery-${type}-light.png`}
      alt={title}
      class="w-full dark:hidden rounded"
    />
    <img
      src={`/images/algokit-gallery-${type}-dark.png`}
      alt={title}
      class="w-full hidden dark:block rounded"
    />
  </div>
</div>
